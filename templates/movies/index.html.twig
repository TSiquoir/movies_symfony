{% extends 'base.html.twig' %}

{% block title %}Hello MoviesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1100px; width: 100%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des films</h1>

    <div class="row">
        {% for movie in movies %}
            <div class="card border-light mb-3 col-md-3 body_card">
                <div class="card-header">{{ movie.name }}</div>
                <div class="card-body">
                    <img src="{{ movie.cover }}" alt="">
          
                    <h5 class="card-title">Light card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
